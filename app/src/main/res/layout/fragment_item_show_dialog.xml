<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:padding="8dp"
        android:background="#fff">

    <TextView
            android:id="@+id/text_view_name"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:maxLines="3"
            android:textSize="18dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image_view_edit_button"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/image_view_edit_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit_333_24dp"
            android:contentDescription="アイテム編集の画面に遷移するためのボタン"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
            android:id="@+id/image_view_delete_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete_333_24dp"
            android:contentDescription="アイテム削除をするためのボタン"
            app:layout_constraintTop_toBottomOf="@id/image_view_edit_button"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:id="@+id/text_view_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>